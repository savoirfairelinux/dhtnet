[Unit]
Description=Dnc server
Documentation=man:dnc(1)
After=network.target

[Service]
Type=simple
User=dnc
Group=dnc
ExecStartPre=/bin/bash -c 'if [ ! -f @sysconfdir@/dhtnet/CA/]; then @bindir@/dhtnet-crtmgr -i @sysconfdir@/dhtnet/CA/ ; fi'
ExecStartPre=/bin/bash -c 'if [ ! -f @sysconfdir@/dhtnet/id/ ]; then @bindir@/dhtnet-crtmgr -i @sysconfdir@/dhtnet/id/ -c @sysconfdir@/dhtnet/CA/dhtnet-ca.crt -p @sysconfdir@/dhtnet/CA/dhtnet-ca.pem; fi'
ExecStart=@bindir@/dnc -l -d @sysconfdir@/dnc.yaml -c @sysconfdir@/dhtnet/id/idPeer.crt -p @sysconfdir@/dhtnet/id/idPeer.pem
Restart=on-failure
RestartSec=2s
LimitNOFILE=65536
DynamicUser=yes
EnvironmentFile=@sysconfdir@/dnc.yaml
KillMode=process
WorkingDirectory=/tmp

# Hardening
CapabilityBoundingSet=CAP_NET_BIND_SERVICE
LockPersonality=yes
NoNewPrivileges=yes
PrivateDevices=yes
PrivateTmp=yes
PrivateUsers=yes
ProtectClock=yes
ProtectControlGroups=yes
ProtectHome=yes
ProtectHostname=yes
ProtectKernelLogs=yes
ProtectKernelModules=yes
ProtectKernelTunables=yes
ProtectSystem=strict
ReadOnlyDirectories=/
ReadWriteDirectories=-/proc/self
ReadWriteDirectories=-/var/run
RestrictAddressFamilies=AF_UNIX AF_INET AF_INET6
RestrictNamespaces=yes
RestrictRealtime=yes
SystemCallArchitectures=native
SystemCallFilter=@system-service

[Install]
WantedBy=multi-user.target
